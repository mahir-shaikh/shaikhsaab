.experience {
	background: #fff;
	height: 100%;
	border-left: 6px solid #025aa5;
	position: relative;
	width: 25%;
	float: right;
	z-index: 3;
	padding: 30px 0px;
	transition: width 0.8s ease;
	  min-width: 250px;
}

.experience-modal{
    left: 0px;
}

.experience-title {
	font-weight: 600;
	font-size: 1.4em;
	color: #025aa5;
	margin: 0 2rem;
	text-transform: uppercase;
}

.experience-close {
	width: 40px;
	height: 40px;
	border-radius: 50%;
	right: 10px;
	top: -5px;
	float: right;
	cursor: pointer;
	position: relative;
	text-align: center;
	font-size: 1.5em;
	padding-top: 0.185em;
	border: solid 3px #005495;
}

.experience-close:hover {
  background-color: #005495;
  color: #FFF;
  -webkit-transition: 1s ease-out;
  -moz-transition:  1s ease-out;
  -ms-transition:  1s ease-out;
  transition:  1s ease-out;
  -ms-transform: rotate(-360deg);
  -moz-transform: rotate(-360deg);
  -webkit-transform: rotate(-360deg);
  transform: rotate(-360deg);
}

.experience-content {
	position: relative;
	padding: 20px 0;
	/*margin: 0 2rem;*/
  height: 100%;
  width: 100%;
}

.experience-link {
	color: #333;
	cursor: pointer;
	font-size: 18px;
	display: block;
	padding: 10px 20px;
}

.experience-link:hover {
	text-decoration: none;
}

.experience-link-text {
	margin: 0 0 0 35px;
}

.experience-modal {
	background-color: rgba(109,116,126,0.8);
	position: absolute;
	width: 100%;
	height: 100%;
	z-index: 2;
	display: none;
}

.experience-modal.modalShow {
	display: block;
}

.experience-icon {
	position: relative;
	float: left;
}

.experience-icon:before {
	color: #647d7e;
	position: absolute;
	top: 2px;
}

.experience.expanded {
	width: 100%;
}

.experience.expanded .experience-links {
	width: 25%;
	float: left;
}

.experience.expanded .experience-expansion {
	width: 75%;
	height: calc(100vh - 180px);
	float: left;
	color: #333;
	position: relative;
	overflow-y: auto;
}

.experience.expanded .experience-expansion:after {
	display: table;
	content: '';
	clear: both;
}


.attachedRight{
    right:0px;
    position:absolute;
}


.isActive{
  text-decoration: underline !important;
}

