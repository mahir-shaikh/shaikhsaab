.contact {
  background: #fff;
  height: 100%;
  border-right: 6px solid #025aa5;
  position: relative;
  width: 25%;
  float: right;
  z-index: 3;
  padding: 30px 0px;
  transition: width 0.8s ease;
  min-width: 250px;
}
.contact-title {
  font-weight: 600;
  font-size: 1.4em;
  color: #025aa5;
  margin: 0 2rem;
  text-transform: uppercase;
}

.contact-content {
  position: relative;
  padding: 20px 0;
  margin: 0 2rem;
  height: 100%;
  width: 100%;
}
.contact-link {
  color: #333;
  cursor: pointer;
  font-size: 18px;
  display: block;
  padding: 10px 20px;
}
.contact-link:hover {
  text-decoration: none;
}
.contact-link-text {
  margin: 0 0 0 35px;
}
.contact-modal {
  background-color: rgba(109,116,126,0.8);
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 2;
  display: none;
  left : 0px;
}
.contact-modal.modalShow {
  display: block;
}
.contact-icon {
  position: relative;
  float: left;
}
.contact-icon:before {
  color: #647d7e;
  position: absolute;
  top: 2px;
}
.contact.expanded {
  width: 100%;
}
.contact.expanded .contact-links {
  width: 25%;
  float: left;
}
.contact.expanded .contact-expansion {
  width: 70%;
  height: calc(100vh - 100px);
  float: left;
  color: #333;
  position: relative;
  overflow-y: auto;
  overflow-x: hidden;
}
.contact.expanded .contact-expansion:after {
  display: table;
  content: '';
  clear: both;
}

.expanded-content{
  height: 100%;
  width: 100%;
}


.attachedLeft{
    left:0px;
    position:absolute;
}


.isActive{
  text-decoration: underline !important;
}