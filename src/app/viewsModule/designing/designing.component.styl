.design {
	background: #fff;
	height: 100%;
	border-left: 6px solid #025aa5;
	position: relative;
	width: 25%;
	float: right;
	z-index: 3;
	padding: 30px 0px;
	transition: width 0.8s ease;
	  min-width: 250px;
}

.design-modal{
    left: 0px;
}

.design-title {
	font-weight: 600;
	font-size: 1.4em;
	color: #025aa5;
	margin: 0 2rem;
	text-transform: uppercase;
}

.design-content {
	position: relative;
	padding: 20px 0;
	margin: 0 2rem;
  height: 100%;
  width: 100%;
}

.design-link {
	color: #333;
	cursor: pointer;
	font-size: 18px;
	display: block;
	padding: 10px 20px;
}

.design-link:hover {
	text-decoration: none;
}

.design-link-text {
	margin: 0 0 0 35px;
}

.design-modal {
	background-color: rgba(109,116,126,0.8);
	position: absolute;
	width: 100%;
	height: 100%;
	z-index: 2;
	display: none;
}

.design-modal.modalShow {
	display: block;
}

.design-icon {
	position: relative;
	float: left;
}

.design-icon:before {
	color: #647d7e;
	position: absolute;
	top: 2px;
}

.design.expanded {
	width: 100%;
}

.design.expanded .design-links {
	width: 25%;
	float: left;
}

.design.expanded .design-expansion {
	width: 75%;
	height: calc(100vh - 180px);
	float: left;
	color: #333;
	position: relative;
	overflow-y: auto;
}

.design.expanded .design-expansion:after {
	display: table;
	content: '';
	clear: both;
}


.attachedRight{
    right:0px;
    position:absolute;
}

.isActive{
  text-decoration: underline !important;
}

.design-expansion .expanded-content{
	height: 100%;
}
