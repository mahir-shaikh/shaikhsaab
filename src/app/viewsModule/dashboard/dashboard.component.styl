.dashboard-wrapper .dashboard-middle-router{
    order: 2;
    margin: auto 0px;
    height: 100%;
}

.dashboard-menu-left {
	order: 1;
	align-self: flex-start;
    margin: auto 0px;
    height: 100%;
}

.dashboard-menu-left ul {
	display: flex;
	flex-direction: column;
	justify-content: space-between;
    height: 100%;    
}

.dashboard-menu-left ul li.dashboard-nav-link {
	display: inline-table;
}

.dashboard-menu-right {
	order: 3;
    margin: auto 0px;
    height: 100%;    
}

.dashboard-menu-right ul {
	display: flex;
	flex-direction: column;
	justify-content: space-between;
    height: 100%;    
}

.dashboard-menu-right ul li.dashboard-nav-link {
	display: inline-table;
	direction: rtl;
	align-self: flex-end;
}


@media screen and (max-width: 768px) {
  .dashboard-menu-left,.dashboard-menu-right {
    display: none;
  }
}


video 
	position: fixed;
	top: 50%;
	left: 50%;
	z-index: 1;
	min-width: 100%;
	min-height: 100%;
	width: auto;
	height: auto;
	transform: translate(-50%, -50%);
	opacity: 0.2;
	pointer-events: none;
	&-overlay
		opacity: 0.5;
		position: absolute;
		left: 0;
		right: 0;
		top: 0;
		bottom: 0;
		background-image: url("../../../assets/images/overlay.png");
  
.sub-main
	position: fixed;
	top: 50%;
	left: 50%;
	min-width: 100%;
	min-height: 100%;
	width: auto;
	height: auto;
	transform: translate(-50%, -50%);
	.heading-text
		width: 100%;
		height: 100%;
		margin: 50% 0px;
		text-align: center;
		h1
			font-size: 6rem;
  
