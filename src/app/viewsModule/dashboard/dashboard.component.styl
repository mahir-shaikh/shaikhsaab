.dashboard-wrapper {
	width: 100vw;
	height: 100%;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	overflow: hidden;
	position: relative;
	z-index: 1
}

.dashboard-wrapper .dashboard-nav-link{
	padding:10px 20px;
	border: 4px solid #025aa5;
	background-color: #FFF;
	font-weight: 600;
	transition: all 0.5s ease;
	cursor: pointer;
	color: #025aa5;
}

.dashboard-nav-link 
	.dashboard-nav-text
		display none
	&:hover
		.dashboard-nav-text
			display: inline-block
			padding 0 10px

.dashboard-wrapper .dashboard-nav-link:hover{
	background-color: #025aa5;
	color: #FFF;
}

.dashboard-nav-link:hover a{
	color: #FFF;
	text-decoration : none;
}

