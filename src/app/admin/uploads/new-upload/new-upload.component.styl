.custom-file-label
    overflow hidden

.upload-image
    &-form
        height: 150px;
        border: 4px dashed #000;
        position relative
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
    &-label
        color: #000;
        padding: 20px 10px
    &-input
        position: absolute;
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        outline: none;
        opacity: 0;
    &-button
        z-index 1
        &.disabled
            pointer-events: none